@{
  Layout = "_Layout";
}

@model PierresSweetAndSavouryTreats.ViewModels.RegisterViewModel

<h3>Register</h3>
<hr>
@using (Html.BeginForm())
{
  <div class="input-group">
    @Html.LabelFor(x=>x.Email)
    @Html.TextBoxFor(x => x.Email,new {@class= "form-control"})
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
  </div>

  <div class="input-group">
    @Html.LabelFor(x=>x.Password)
    @Html.PasswordFor(x => x.Password,new {@class= "form-control"})
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
  </div>

  <div class="input-group">
    @Html.LabelFor(x=>x.PasswordMatch)
    @Html.PasswordFor(x => x.PasswordMatch,new {@class= "form-control"})
    @Html.ValidationMessageFor(m => m.PasswordMatch, "", new { @class = "error" })
  </div>


  <input type="submit" value="Register" class="btn btn-default">
}